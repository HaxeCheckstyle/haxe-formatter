{
	"whitespace": {
		"parenConfig": {
			"sharpConditionParens": {
				"openingPolicy": "onlyAfter",
				"closingPolicy": "before"
			}
		}
	}
}

---

class Main {
	static function main() {
		try {
			#if (haxe_ver > 4.0)
			#end
			var v, a = 1, b = 2;
			switch (a) {
				default:
					v = (a + b);
			}
			if (a) {
				v = (a + b);
			}
			while (true) {
				v = (a + b);
			}
			do {
				v = (a + b);
			} while (true);
		} catch (e:Any)
	}
}

